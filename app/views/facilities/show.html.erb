<div class="container m-4">
<h1 class="display-6 text-center mb-3"><%= @facility.name %></h1>
<p><strong>Address:</strong> <%= @facility.address %></p>
<p><strong>City:</strong> <%= link_to @facility.city.name, @facility.city %></p>
<!--Below googl maps code was generated using chatgpt -->
<% if @facility.lat && @facility.lng %>
  <iframe
    width="600"
    height="450"
    style="border:0"
    loading="lazy"
    allowfullscreen
    referrerpolicy="no-referrer-when-downgrade"
    src="https://www.google.com/maps?q=<%= @facility.lat %>,<%= @facility.lng %>&hl=en&z=14&output=embed">
  </iframe>
<% else %>
  <p>Location not available.</p>
<% end %>
<p><%= link_to "Back to Facilities", facilities_path %></p>

<h2>Services Offered</h2>
  <% if @facility.services.any? %>
  <ul class="d-inline-block text-start">
    <% @facility.services.each do |s| %>
      <li><%= link_to s.name, s %></li>
    <% end %>
  </ul>
<% else %>
  <p>No services listed for this facility.</p>
<% end %>
</div>
