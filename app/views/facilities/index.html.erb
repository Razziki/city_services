<h1>Facilities</h1>
<!--i lookup this form part online -->
<%= form_with url: facilities_path, method: :get, local: true do %>
  <label>City:</label>
  <select name="city_id">
    <option value="">All</option>
    <% @cities.each do |c| %>
      <option value="<%= c.id %>" <%= "selected" if c.id.to_s == params[:city_id].to_s %>>
        <%= c.name %>
      </option>
    <% end %>
  </select>
  <button type="submit">Filter</button>
<% end %>
<p><%= @facilities.total_count %> result<%= "s" if @facilities.total_count != 1 %></p>
  <ul class="d-inline-block text-start">
  <% @facilities.each do |f| %>
    <li><%= link_to f.name, f %> - <%= f.city.name %></li>
  <% end %>
</ul>
  <nav class="d-flex justify-content-center my-3 kami">
<%= paginate @facilities %>
</nav>



