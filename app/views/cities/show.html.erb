<div class="container m-4">
<h1 class="display-6 text-center mb-3"><%= @city.name %>, <%= @city.province %></h1>

<p class="display-6 text-center mb-3"><strong> Country: </strong><%= @city.country %></p>

<h1 class="display-6 text-center mb-3">Location</h1>
<!-- Code below for google maps was generated using chatgpt-->
<% if @city.lat && @city.lng %>
  <iframe
    width="600"
    height="450"
    style="border:0"
    loading="lazy"
    allowfullscreen
    referrerpolicy="no-referrer-when-downgrade"
    src="https://www.google.com/maps?q=<%= @city.lat %>,<%= @city.lng %>&hl=en&z=14&output=embed">
  </iframe>
<% else %>
  <p>Location not available.</p>
<% end %>

<p><%= link_to "Back to Cities", cities_path %></p>

</div>
